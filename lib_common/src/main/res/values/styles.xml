<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme</item>
        <!-- 头部左边字体颜色 -->
        <item name="colorPrimaryDark">@color/app_theme</item>
        <!-- 通知栏背景 -->
        <item name="colorAccent">@color/app_theme</item>
        <!-- 默认按钮颜色 -->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 程序背景图 -->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:overScrollMode">never</item>

    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:background">@drawable/setfontlinearlayout</item>-->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
    </style>

    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WindowStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


</resources>