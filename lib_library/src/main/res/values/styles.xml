<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme</item>
        <!-- 头部左边字体颜色 -->
        <item name="colorPrimaryDark">@color/app_theme</item>
        <!-- 通知栏背景 -->
        <item name="colorAccent">@color/common_bg_green_2</item>
        <!-- 默认按钮颜色 -->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 程序背景图 -->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:overScrollMode">never</item>

    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:background">@drawable/setfontlinearlayout</item>-->
        <item name="android:windowBackground">@color/transparent</item><!-- 背景透明 -->
    </style>

    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--图片选择器-->
    <style name="MyToolbar" parent="android:Widget">
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
        <!--<item name="subtitleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle</item>-->
        <item name="android:minHeight">48dp</item>
        <item name="titleMargins">4dp</item>
        <item name="maxButtonHeight">56dp</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <!--<item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>-->
        <item name="contentInsetStart">16dp</item>
        <!--<item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_start_material</item>-->
        <!--<item name="android:paddingRight">@dimen/abc_action_bar_default_padding_end_material</item>-->
    </style>

    <style name="ToolBarTitle" parent="android:Widget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


</resources>